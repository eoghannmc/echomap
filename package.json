{
  "scripts": {
    "dev": "concurrently \"npm:dev:server\" \"npm:dev:frontend\"",
    "dev:frontend": "next dev \"./frontend\" -p 3000",
    "dev:server": "concurrently \"tsc -p server/tsconfig.json -w\" \"nodemon --watch server/dist --ext js --exec node server/dist/index.js\"",
    "build": "next build \"./frontend\" && tsc -p server/tsconfig.json",
    "start": "concurrently \"node server/dist/index.js\" \"next start ./frontend\""
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.15",
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^5.0.3",
    "@types/node": "^24.9.1",
    "@types/react": "19.2.2",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.15",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "jsdf": "^0.3.2",
    "maplibre-gl": "^5.9.0",
    "next": "^16.0.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  }
}
